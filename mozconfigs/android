XARCH_CFLAGS="-march=armv8-a+aes+crc+sha2+crypto"
XARCH_RUSTFLAGS="-Ctarget-feature=+aes -Ctarget-feature=+crc -Ctarget-feature=+sha2 -Ctarget-feature=+crypto"
XOPT_RUSTFLAGS="-Clto=no"
if test "$GEN_PGO"; then
    ac_add_options --enable-profile-generate=cross
elif test "$CSIR_PGO"; then
    XPGO_CFLAGS="-fcs-profile-generate -DMOZ_PROFILE_GENERATE"
    XPGO_RUSTFLAGS="-Cllvm-args=--cs-profile-generate"
    ac_add_options --enable-profile-use=cross
    ac_add_options --with-pgo-jarlog="@TOPSRCDIR@/workspace/en-US.log"
    ac_add_options --with-pgo-profile-path="@TOPSRCDIR@/workspace/merged.profdata"
elif test "$USE_PGO"; then
    XARCH_CFLAGS="-mcpu=cortex-a55+crypto+ssbs -mtune=cortex-a55"
    XARCH_RUSTFLAGS="-Ctarget-cpu=cortex-a55 -Ctarget-feature=+crypto -Ctarget-feature=+ssbs"
    XOPT_RUSTFLAGS="-Ccodegen-units=1"
    ac_add_options --enable-lto=cross,full
    ac_add_options --enable-profile-use=cross
    ac_add_options --with-pgo-jarlog="@TOPSRCDIR@/workspace/en-US.log"
    ac_add_options --with-pgo-profile-path="@TOPSRCDIR@/workspace/merged-cs.profdata"
fi

XWARNING_CFLAGS="-Wno-unused-command-line-argument"
XOPT_CFLAGS="-O3 -fno-semantic-interposition -fno-common -fno-plt -fcf-protection=none -fno-stack-protector -fno-stack-clash-protection"
XCFLAGS="${XWARNING_CFLAGS} ${XARCH_CFLAGS} ${XOPT_CFLAGS} ${XPGO_CFLAGS} -mllvm=-enable-ext-tsp-block-placement=1"
XLDFLAGS="${XWARNING_CFLAGS} ${XARCH_CFLAGS} ${XOPT_CFLAGS} ${XPGO_CFLAGS} ${MIMALLOC_FLAGS} -s -Wl,-O2,--mllvm=-enable-ext-tsp-block-placement=1"
XRUSTFLAGS="${XARCH_RUSTFLAGS} ${XOPT_RUSTFLAGS} ${XPGO_RUSTFLAGS} -Copt-level=3 -Cstrip=symbols -Cdebuginfo=0 -Cpanic=abort -Ccontrol-flow-guard=no -Cllvm-args=--enable-ext-tsp-block-placement"

# Build Configs
ac_add_options --enable-project=mobile/android
ac_add_options --disable-artifact-builds
ac_add_options --enable-bootstrap
if test "$USE_SCCACHE"; then
    ac_add_options --with-ccache=sccache
fi

# Build for Android
ac_add_options --target=aarch64
ac_add_options --enable-elf-hack=relr

# Disable debug & tests
ac_add_options --disable-debug
ac_add_options --disable-debug-js-modules
ac_add_options --disable-debug-symbols
ac_add_options --disable-fuzzing
ac_add_options --disable-profiling
ac_add_options --disable-rust-debug
ac_add_options --disable-tests
ac_add_options --disable-gtest-in-build

# Optimization settings
ac_add_options --enable-release
# ac_add_options --enable-strip
ac_add_options --enable-install-strip
ac_add_options --enable-minify=properties
ac_add_options --enable-clang-plugin
if test "$USE_MIMALLOC"; then
    ac_add_options --disable-jemalloc
else
    ac_add_options --enable-jemalloc
fi
ac_add_options --enable-optimize="${XCFLAGS}"
ac_add_options --enable-rust-simd
ac_add_options --enable-wasm-memory64
ac_add_options --enable-wasm-memory-control
ac_add_options --enable-wasm-multi-memory
ac_add_options --enable-wasm-branch-hinting
ac_add_options --enable-wasm-simd
ac_add_options --enable-wasm-relaxed-simd
# ac_add_options --enable-wasm-avx

# Security
ac_add_options --disable-hardening
ac_add_options --disable-sandbox
ac_add_options --without-wasm-sandboxed-libraries

# Disable Modules
# ac_add_options --disable-accessibility # Cause a build error
# ac_add_options --disable-bits-download
ac_add_options --disable-crashreporter
ac_add_options --disable-dmd
ac_add_options --disable-phc
# ac_add_options --disable-maintenance-service
ac_add_options --disable-nodejs
ac_add_options --disable-parental-controls
# ac_add_options --disable-update-agent
ac_add_options --disable-updater
ac_add_options --disable-synth-speechd
ac_add_options --disable-webspeech
ac_add_options --disable-webspeechtestbackend
ac_add_options --disable-valgrind

# Media settings
ac_add_options --enable-av1
# ac_add_options --enable-eme=widevine
ac_add_options --enable-jxl
ac_add_options --enable-raw
ac_add_options --enable-webrtc

# Client settings
mk_add_options MOZ_CRASHREPORTER=0
mk_add_options MOZ_DATA_REPORTING=0
mk_add_options MOZ_SERVICES_HEALTHREPORT=0
mk_add_options MOZ_TELEMETRY_REPORTING=0

# Branding
export MOZILLA_OFFICIAL=1
ac_add_options --enable-official-branding

# Make flags
mk_add_options AUTOCLOBBER=1
mk_add_options MOZ_MAKE_CFLAGS="-j$(nproc)"
mk_add_options MOZ_PARALLEL_COMPILE=1

# Compiler, Linker, and Rust flags
# export CPPFLAGS="-DNDEBUG -D_NDEBUG"
export CFLAGS="${CFLAGS} ${XCFLAGS}"
export CXXFLAGS="${CXXFLAGS} ${XCFLAGS}"
export LDFLAGS="${LDFLAGS} ${XLDFLAGS}"
export RUSTFLAGS="${RUSTFLAGS} ${XRUSTFLAGS}"
